{
  "pluginAlias": "iBricksHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "disableLamella": {
        "title": "Disable Lamella",
        "type": "array",
        "items": {
          "title": "Mac Address",
          "type": "string"
        }
      },
      "reboot": {
        "title": "Reboot",
        "type": "boolean",
        "required": false
      },
      "directorTargetHeatingCoolingState": {
        "title": "Director Target Heating Cooling State",
        "type": "string",
        "default": "relay",
        "oneOf": [
          { "title": "Off", "enum": ["Off"] },
          { "title": "Heat", "enum": ["Heat"] },
          { "title": "Cool", "enum": ["Cool"] },
          { "title": "Auto", "enum": ["Auto"] }
        ]
      },
      "ignoreDevices": {
        "title": "Ignore devices",
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "macAddress": {
              "title": "Mac address",
              "type": "string"
            },
            "childDevices": {
              "title": "Child devices",
              "type": "array",
              "items": {
                "title": "Child device",
                "type": "object",
                "properties": {
                  "channel": {
                    "title": "Channel",
                    "type": "number",
                    "required": true
                  },
                  "deviceType": {
                    "title": "Device type",
                    "type": "string",
                    "default": "relay",
                    "oneOf": [
                      { "title": "Relay", "enum": ["relay"] },
                      { "title": "Shutter", "enum": ["shutter"] },
                      { "title": "Director", "enum": ["director"] },
                      { "title": "Meteo", "enum": ["meteo"] }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
